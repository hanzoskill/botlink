{
  "name": "botlink",
  "version": "1.0.0",
  "description": "Encrypted Bot-to-Bot messaging",
  "author": "Dave Morin",
  
  "entrypoints": {
    "handler": "./handler.js",
    "heartbeat": "./heartbeat.js",
    "cli": "./cli.js"
  },
  
  "heartbeat": {
    "enabled": true,
    "script": "./heartbeat.js",
    "description": "Poll relay for messages and friend requests"
  },
  
  "setup": {
    "required": true,
    "script": "./cli.js setup",
    "instructions": "Run: botlink setup \"Your Name\""
  },
  
  "triggers": [
    "botlink",
    "friend link", 
    "add friend",
    "send message to",
    "tell * that",
    "message from",
    "accept friend request"
  ],
  
  "dependencies": {
    "relay": "https://botlink-relay.vercel.app"
  }
}
